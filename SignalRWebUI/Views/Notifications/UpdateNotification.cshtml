@model UpdateNotificationDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden" asp-for="NotificationId" />
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Bildirim Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Bildirim Türü</label>
                                <input type="text" class="form-control" asp-for="NotificationType" id="categoryname">
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Bildirim İkonu</label>
                                <input type="text" class="form-control" asp-for="NotificationIcon" id="categoryname">
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Bildirim Tarihi</label>
                                <input type="date" class="form-control" asp-for="NotificationDate" id="categoryname">
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Açıklama</label>
                                <textarea class="form-control" asp-for="Description"></textarea>
                            </div>
                        </div>

                        <div class="card-action">
                            <button class="btn btn-primary">Bildirimi Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

