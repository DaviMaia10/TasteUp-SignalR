@model CreateMailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.9.0/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.9.0/dist/summernote-lite.min.js"></script>
</head>
<body>
    <div class="content">
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-header bg-dark text-white ">
                            <h4 class="mb-0 fw-bold" style="color:white">
                                <i class="fas fa-envelope me-2"></i>Mail Gönder
                            </h4>
                        </div>
                        <div class="card-body p-4">
                            <form method="post" id="mailForm">

                                <div class="row mb-4">
                                    <div class="col-md-12">
                                        <label class="form-label fw-bold mb-2">
                                            Alıcı Mail Adresi <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="ReceiverMail" class="form-control form-control-lg" placeholder="ornek@email.com" />
                                    </div>
                                </div>

                                <div class="row mb-4">
                                    <div class="col-md-12">
                                        <label class="form-label fw-bold mb-2">
                                            Konu <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="Subject" class="form-control form-control-lg" placeholder="Mail konusu" />
                                    </div>
                                </div>

                                <div class="row mb-4">
                                    <div class="col-md-12">
                                        <label class="form-label fw-bold mb-2">
                                            Mesajınız <span class="text-danger">*</span>
                                        </label>
                                        <textarea asp-for="Body" class="form-control" rows="10" id="summernote" placeholder="Mail içeriğinizi buraya yazın..."></textarea>
                                    </div>
                                </div>

                                <div class="row mt-4">
                                    <div class="col-md-12">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <button type="submit" class="btn btn-primary btn-lg">
                                                <i class="fas fa-paper-plane me-2"></i>Mail Gönder
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $('#summernote').summernote({
          placeholder: 'Mail içeriğinizi buraya yazın...',
          tabsize: 2,
          height: 120,
          toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
          ]
        });
    </script>
</body>
</html>


