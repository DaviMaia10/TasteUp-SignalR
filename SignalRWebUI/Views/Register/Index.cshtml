@model RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TasteUp - Kayıt Ol</title>
    <link rel="stylesheet" href="~/TasteUpRegister/css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <!-- Sol Taraf - Görsel Bölümü -->
        <div class="left-panel">
            <div class="brand-section">
                <div class="logo">
                    <span class="logo-icon">🍽️</span>
                    <h1 class="logo-text">TasteUp</h1>
                </div>
                <p class="tagline">Lezzetin Yeni Adresi</p>
            </div>
            <div class="decorative-elements">
                <div class="floating-element elem-1">🥗</div>
                <div class="floating-element elem-2">🍕</div>
                <div class="floating-element elem-3">🍜</div>
                <div class="floating-element elem-4">🍰</div>
                <div class="floating-element elem-5">☕</div>
            </div>
            <div class="testimonial">
                <p>"Lezzet Up, Keyif Up!"</p>
                <span class="author">— Mutlu Müşterilerimiz</span>
            </div>
        </div>

        <!-- Sağ Taraf - Form Bölümü -->
        <div class="right-panel">
            <div class="form-container">
                <div class="form-header">
                    <h2>Hesap Oluştur</h2>
                    <p>Lezzetli dünyamıza katılın</p>
                </div>

                <form id="registerForm" class="register-form" method="post">
                    <div class="input-row">
                        <div class="input-group">
                            <label>Ad</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                                <input type="text" id="firstName" asp-for="Name" placeholder="Adınız" required>
                            </div>
                            <span class="error-message" id="firstNameError"></span>
                        </div>
                        <div class="input-group">
                            <label>Soyad</label>
                            <div class="input-wrapper">
                                <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                                <input type="text" id="lastName" asp-for="Surname" placeholder="Soyadınız" required>
                            </div>
                            <span class="error-message" id="lastNameError"></span>
                        </div>

                        
                    </div>

                    <div class="input-group">
                        <label>Kullanıcı Adınız</label>
                        <div class="input-wrapper">
                            <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                            <input type="text" id="lastName" asp-for="UserName" placeholder="Kullanıcı adınız" required>
                        </div>
                        <span class="error-message" id="lastNameError"></span>
                    </div>

                    <div class="input-group">
                        <label>E-posta</label>
                        <div class="input-wrapper">
                            <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                <polyline points="22,6 12,13 2,6"></polyline>
                            </svg>
                            <input type="email" id="email" asp-for="Email" placeholder="tasteup@gmail.com" required>
                        </div>
                        <span class="error-message" id="emailError"></span>
                    </div>

  

                    <div class="input-group">
                        <label>Şifre</label>
                        <div class="input-wrapper">
                            <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                            </svg>
                            <input type="password" id="password" asp-for="Password" placeholder="••••••••" required>
                            <button type="button" class="toggle-password" onclick="togglePassword('password')">
                                <svg class="eye-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                    <circle cx="12" cy="12" r="3"></circle>
                                </svg>
                            </button>
                        </div>
                        <div class="password-strength">
                            <div class="strength-bar" id="strengthBar"></div>
                        </div>
                        <span class="error-message" id="passwordError"></span>
                    </div>



                    <div class="checkbox-group">
                        <label class="custom-checkbox">
                            <input type="checkbox" id="terms" name="terms" required>
                            <span class="checkmark"></span>
                            <span class="checkbox-text">
                                <a href="#">Kullanım Şartları</a> ve <a href="#">Gizlilik Politikası</a>'nı kabul ediyorum
                            </span>
                        </label>
                    </div>

                    <button class="submit-btn" id="submitBtn">
                        <span class="btn-text">Kayıt Ol</span>
                        <span class="btn-loader hidden">
                            <svg class="spinner" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="3" fill="none" stroke-dasharray="30 70"></circle>
                            </svg>
                        </span>
                    </button>
                </form>

                <div class="form-footer">
                    <p>Zaten hesabınız var mı? <a href="/Login/Index/">Giriş Yapın</a></p>
                </div>

            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div class="toast" id="toast">
        <div class="toast-content">
            <svg class="toast-icon success" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
            <svg class="toast-icon error" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="15" y1="9" x2="9" y2="15"></line>
                <line x1="9" y1="9" x2="15" y2="15"></line>
            </svg>
            <span class="toast-message" id="toastMessage"></span>
        </div>
    </div>

    <script src="~/TasteUpRegister/js/app.js"></script>
</body>
</html>


